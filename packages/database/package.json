{
    "name": "@repo/database",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "lint": "eslint . --max-warnings 0",
        "prisma": "prisma-import -f -s '{prisma/base.prisma,src/**/*.prisma}' -o prisma/schema.prisma && prisma",
        "generate": "npm run prisma generate"
    },
    "dependencies": {
        "@prisma/client": "^6.0.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@types/node": "^20.10.6",
        "eslint": "^8.56.0",
        "prisma": "^6.0.0",
        "prisma-import": "^1.0.4",
        "typescript": "^5.3.3"
    }
}
